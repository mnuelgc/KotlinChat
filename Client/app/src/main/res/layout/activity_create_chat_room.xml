<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateChatRoomActivity"
    android:background="@drawable/round_border_frame_main">>

    <EditText
        android:inputType="text"
        android:hint="Room's name"
        android:gravity="center"
        android:id="@+id/editTextRoomsName"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="15dp"
        android:textColor="@color/quasiBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_border_frame"/>


        <Button
            android:id="@+id/buttonCreateRoom"
            android:text="Create Room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toBottomOf="@id/editTextRoomsName"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/quasiBlack"
            android:textColor="@color/beige"
            android:textStyle="bold"
            android:textSize="25sp" />

        <!--
            <Button
                android:id="@+id/buttonDisconnect"
                android:text="Disconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/buttonConnect"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"
                />

        -->

</androidx.constraintlayout.widget.ConstraintLayout>